@{
    ViewBag.Title = "index";
}

<h2>index</h2>
<button>Click Me</button>
<p id="reply"></p>

<script>
    $(document).ready(function() {
        $("button").click(function () {
            $.get("@Url.Action("ShakeBall", "Home")", function (response) {
                $("#reply").text(response);
            });
            
        });
    });
</script>

